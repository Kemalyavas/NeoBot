[Unit]
Description=NeoBI Chatbot Service
After=network.target

[Service]
Type=simple
User=neobi_vm_user
WorkingDirectory=/home/neobi_vm_user/NeoBot/backend
Environment="PATH=/home/neobi_vm_user/NeoBot/backend/venv/bin"
ExecStart=/home/neobi_vm_user/NeoBot/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 6000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
